{
  "name": "@artemiskit/adapter-openai",
  "version": "0.1.0",
  "description": "OpenAI and Azure OpenAI adapter for Artemis LLM testing framework",
  "type": "module",
  "license": "Apache-2.0",
  "author": "code-sensei",
  "repository": {
    "type": "git",
    "url": "https://github.com/code-sensei/artemiskit.git",
    "directory": "packages/adapters/openai"
  },
  "keywords": ["llm", "openai", "azure", "adapter"],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && bun build ./src/index.ts --outdir ./dist --target bun",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "bun test"
  },
  "dependencies": {
    "@artemiskit/core": "workspace:*",
    "openai": "^4.28.0",
    "nanoid": "^5.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "typescript": "^5.3.0"
  }
}
