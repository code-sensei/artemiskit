{
  "name": "@artemis/reports",
  "version": "0.0.1",
  "description": "Report generation for Artemis LLM testing framework",
  "type": "module",
  "license": "MIT",
  "author": "Cognifai Labs",
  "repository": {
    "type": "git",
    "url": "https://github.com/cognifai-labs/artemis.git",
    "directory": "packages/reports"
  },
  "keywords": ["llm", "testing", "reports", "html"],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && bun build ./src/index.ts --outdir ./dist --target bun",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "bun test"
  },
  "dependencies": {
    "@artemis/core": "workspace:*",
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "typescript": "^5.3.0"
  }
}
